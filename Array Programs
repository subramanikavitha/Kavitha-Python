"""Create two functions that find and returns the largest and 
the smallest numbers in a given list of positive numbers"""
def find_smallest(listofnums):
  smallest=1000
  for num in listofnums:
    if num<smallest:
      smallest=num
  return smallest
def find_largest(listofnums):
  largest=0
  for num in listofnums:
    if num>largest:
      largest=num
  return largest

nums=[5,78,99,34,22,32,12,99,89]
print(find_smallest(nums), find_largest(nums))

'''
create two functions that find and returns
 the largest and smallest numbers in a given list of 
positive numbers   '''
def large_number(numbers):
    return max(numbers)

def small_number(numbers):
    return min(numbers)
numbers = [1, 2, 3, 4, 5]
largest_number = large_number(numbers)
smallest_number = small_number(numbers)

print("Largest number:", largest_number)
print("Smallest number:", smallest_number)

# Question 1
class Book:
     # Question 2
     def __init__(self , Title , Author , Price):
          self.Title    =  Title
          self.Author   =  Author
          self.Price    =  Price
          
     # Question 3
     def view(self ):
          return ("Book Title: " , self.Title ,  "Book Author: " , self.Author, "Book Price: " , self.Price)
          
# Question 4
MyBook = Book("Python Crash Course" , "Eric Matthes" , "23 $")          
print( MyBook.view())
# The output: ('Book Title: ', 'Python Crash Course', 'Book Author: ', 'Eric Matthes', 'Book Price: ', '23 $')

found=False
i=0
names=['Elena','Sonia','Mary','Lopamudra','Anita','Anastasia','Anita','Tanya','Jessica','Adriana','Kanita']
search=input('Enter name to find in list: ')
while not found and i<len(names):
  if search.title()==names[i]:
    found=True
    print(search,'is number',i+1,'on the list.')
    break
  else:
    i+=1
if not found:
  print(search,'is not on the list')
  
  
  vowels = "aeiou"
count = 0
for letter in 'Casandro':
    if letter in vowels:
        count += 1
print("Number of vowels:", count)

