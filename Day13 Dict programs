 "name" : {
      "firstname" : "kavitha",
       "lastname" : "subramani",
        "location":"Canada",

},
"name1" : {
 
   "firstname" : "kavitha",
       "lastname" : "subramani",
        "location":"Canada",
},

}
for username,user_info in users.items():
 print("\nUsername:" + username)
 full_name = user_info['firstname'] +"  "+ user_info['lastname']
 location = user_info['location']
 print("\nFull name:" +full_name.title())
 print("\nlocation:" + location.title())
