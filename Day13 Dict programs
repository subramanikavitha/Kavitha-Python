cities = {
    'New York':
    {
      'country': 'United States', 
      'population': 838174,
      'fact': 'The new york city every one like.'
    },
    'Tokyo':
     {
         'country': 'Japan',
         'population': 151271, 
         'fact': 'Tokyo people are so good .'
    },
    'Paris': 
    {
        'country': 'France', 
        'population': 212345, 
        'fact': 'Every one like the city.'
   }
}

for city, info in cities.items():
    print("\ncity:")
    for key, value in info.items():
     print(key.title(), value)

