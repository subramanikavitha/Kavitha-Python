favorite_numbers = {
    'John': 7,
    'Sarah': 3,
    'Mike': 42,
    'Linda': 13,
    'Tom': 8
}

for name, number in favorite_numbers.items():
    print(name,"s favorite number is:",number)

favorite_numbers = {
    'kavitha': [3, 7],
    'mary': [2, 4],
    'mike': [1, 5, 9],
}

for name, numbers in favorite_numbers.items():
    print(name + "'s favorite numbers are:")
   # for number in numbers:
    #  print("\t",number)
    for i in range(len(numbers)):
     print('\t',numbers[i])

#######################################
pchoice={
     "John" : {"food":"Dosa","animal":"dog","palce":"Ontario"},
     "Reetu" : {"food":"Idly","animal":"cat","place":"Niagara"},
     "Meenu" : {"food":"Pizza","animal":"fish","place":"paris"},
     "Sonu": {"food":"pasta","animal":"bunny","place":"Newyork"}
    }
for person,p_info in pchoice.items():
    print("\n",person ,"and his favorites")
    for key in p_info:
        
        print(key + ':', p_info[key])
